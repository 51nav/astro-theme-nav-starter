---
import { createSvg } from '../config/icons';

export interface Props {
  icon: string;
  class: string | undefined;
}

const { icon, class: className = '' } = Astro.props;
const svgPath = createSvg(icon);
---

<svg 
  class={className} 
  viewBox="0 0 24 24" 
  fill="currentColor"
  set:html={svgPath}
/> 